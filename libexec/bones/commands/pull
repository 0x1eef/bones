#!/bin/sh
set -e

##
# globals
libexec="$(dirname "${0}")/.."
repodir="/home/_bones/.local/share/skeletons"
branch=""

##
# functions
. "${libexec}"/functions/print.sh

##
# main
if [ ! -d "${repodir}" ]; then
    printerr "${repodir} is not a directory"
    exit 1
else
    cd "${repodir}"
    branch=$("${libexec}"/scripts/git branch --show-current)
    "${libexec}"/scripts/git pull --rebase origin "${branch}"
fi
