#!/bin/sh
set -e

##
# globals
repourl="${1}"
libexec="$(dirname "${0}")/.."
repodir="/home/_bones/.local/share/skeletons"
git="${libexec}"/scripts/git

##
# functions
. "${libexec}"/functions/print.sh

##
# main
if [ -z "${repourl}" ]; then
    printerr "provide a repository url"
    exit 1
elif [ ! -e "${repodir}" ]; then
    "${libexec}"/scripts/mkdir -m 750 -p "${repodir}"
fi

cd "${repodir}"
if "${git}" clone "${repourl}" "${repodir}"; then
    printok "clone complete"
else
    rc="${?}"
    printerr "unexpected clone error"
    exit "${rc}"
fi
