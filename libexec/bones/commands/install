#!/bin/sh
set -e

##
# globals
libexec="$(dirname "${0}")/.."
dirname="${1}"
destdir="${2}"
repodir="/home/_bones/.local/share/skeletons/${dirname}"
user="$(id -n -u)"
group="$(id -n -g)"

##
# functions
. "${libexec}"/functions/print.sh

parse_options()
{
    while getopts u:g: opt; do
        if [ "${opt}" = "u" ]; then
            user="${OPTARG}"
        elif [ "${opt}" = "g" ]; then
            group="${OPTARG}"
        else
            exit 1
        fi
    done
}

##
# main
if [ -z "${destdir}" ]; then
    printerr "provide the path to a target"
    exit 1
elif [ -d "${repodir}" ]; then
    shift 2
    parse_options "${@}"
    find "${repodir}" -type d -mindepth 1 |
    sed "s|${repodir}/||" |
    while read -r dir; do
        mkdir -m 750 -p "${destdir}"/"${dir}"
        printok "mkdir -m 750 -p ${destdir}/${dir}"
    done
    find "${repodir}" -type f -mindepth 1 |
    sed "s|${repodir}/||" |
    while read -r file; do
        "${libexec}"/scripts/install "${repodir}" "${destdir}" "${file}"
    done
    "${libexec}"/scripts/finalize "${destdir}" "${user}" "${group}"
else
    printerr "${repodir} is not a directory"
    exit 1
fi
