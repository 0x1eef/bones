#!/bin/sh
set -e

##
# vars
libexec="$(dirname "${0}")/../libexec/bones"

##
# main
case "${1}" in
    "clone")
        "${libexec}"/commands/clone "${2}"
        exit "${?}"
        ;;
    "pull")
        "${libexec}"/commands/pull "${2}"
        exit "${?}"
        ;;
    "install")
        "${libexec}"/commands/install "${2}" "${3}"
        exit "${?}"
        ;;
    *)
        printf "Usage: bones COMMAND [OPTIONS]\n"
        printf "\n"
        printf "Commands\n"
        printf "  clone       Clone a skeleton\n"
        printf "  pull        Pull skeleton updates\n"
        printf "  install     Install into a target directory\n"
        exit 1
        ;;
esac


